# 🌐 DATABASE CONFIG
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8npass

# 🌍 TIMEZONE
TZ=Asia/Bangkok
GENERIC_TIMEZONE=Asia/Bangkok

# 🔐 OPTIONAL: Basic Auth (เปิดใช้งานหากต้องการป้องกัน)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=supersecurepassword

# 🚀 OPTIONAL: Webhook base URL (หากใช้บน Render/Railway)
# WEBHOOK_URL=https://your-n8n-service.onrender.com

# 🔒 (แนะนำ) ถ้าคุณต้องการเปิดการเข้ารหัส JWT
# N8N_JWT_SECRET=random_long_string_here
